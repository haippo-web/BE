<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- 달력 메인 창 -->
<BorderPane fx:controller="com.mypage.controller.TodoController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000" prefHeight="750"
            stylesheets="@/css/win98.css">

    <!-- ─── 1. 상단 메뉴 & 툴바 ─────────────────────────────── -->
    <top>
        <VBox spacing="0">
            <!-- 메뉴바 -->
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Exit" onAction="#onExit"/>
                </Menu>
                <Menu text="Schedule">
                    <MenuItem text="Add…" onAction="#onAddSchedule"/>
                </Menu>
            </MenuBar>

            <!-- 툴바 (Win98 아이콘은 PNG 16×16 권장) -->
            <ToolBar>
                <Button graphicTextGap="4" onAction="#onAddSchedule">
                    <graphic>
                        <ImageView fitWidth="16" fitHeight="16"
                                   preserveRatio="true"
                                   image="@/img/ic_add.png"/>
                    </graphic>
                    <Text text="Add"/>
                </Button>
                <Separator orientation="VERTICAL"/>
                <Button fx:id="btnPrev" text="◀ Prev"  onAction="#onPrevMonth"/>
                <Label  fx:id="lblMonth" text="July 2025" style="-fx-font-weight:bold; -fx-padding:0 6 0 6;"/>
                <Button fx:id="btnNext" text="Next ▶"  onAction="#onNextMonth"/>
            </ToolBar>
        </VBox>
    </top>

    <!-- ─── 2. 달력 영역 : 배경 이미지 + 날짜 그리드 ─────────── -->
    <center>
        <StackPane>
            <!-- Win98 달력 배경 이미지 -->
            <ImageView fx:id="calendarBg"
                       fitWidth="700" preserveRatio="true"/>
            <!-- 날짜 버튼 7×6 -->
            <GridPane fx:id="calendarGrid"
                      hgap="2" vgap="2"
                      style="-fx-background-color:transparent;"/>
        </StackPane>
    </center>

    <!-- ─── 3. 우측 패널 : 선택 날짜의 일정 목록 ──────────────── -->
    <right>
        <VBox fx:id="todoPanel"
              spacing="6" prefWidth="270"
              style="-fx-padding:10;">
            <!-- 기본 안내 텍스트 -->
            <Label text="Schedule List" style="-fx-font-weight:bold;"/>
            <Separator/>
        </VBox>
    </right>

    <!-- ─── 4. 하단 상태바 (선택사항) ─────────────────────────── -->
    <bottom>
        <HBox spacing="4" style="-fx-padding:4 8;">
            <Label fx:id="statusLabel" text="Ready."/>
        </HBox>
    </bottom>

</BorderPane>
