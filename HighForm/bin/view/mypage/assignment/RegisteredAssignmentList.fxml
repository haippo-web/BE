<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="700"
            style="-fx-background-color:#c0c0c0; -fx-border-color:black; -fx-border-width:3;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mypage.controller.AssignmentController">

    <!-- ───── 타이틀바 ───── -->
    <Label layoutX="10" layoutY="10" prefHeight="40" prefWidth="680"
           style="-fx-background-color:#00007b; -fx-text-fill:white; -fx-font-size:26px;"
           text="등록된 과제"/>

    <!-- (시각용) ▼ / ✖ 버튼 -->
    <Button layoutX="620" layoutY="14" prefHeight="28" prefWidth="28"
            style="-fx-background-color:#e0e0e0; -fx-border-color:black;" text="▼"/>
    <Button layoutX="660" layoutY="14" prefHeight="28" prefWidth="28"
            style="-fx-background-color:#e0e0e0; -fx-border-color:black;" text="✖"/>

    <!-- ───── 과제 리스트 ───── -->
    <VBox fx:id="assignmentListBox" layoutX="10" layoutY="70"
          prefHeight="460" prefWidth="680"
          style="-fx-background-color:#d4d0c8; -fx-border-color:black; -fx-border-width:2;">

        <!-- 헤더 -->
        <HBox spacing="0" style="-fx-padding:0; -fx-background-color:#e0e0e0; -fx-border-color:black; -fx-border-width:0 0 2 0;">
            <Label text="No."      minWidth="60"  prefWidth="60"  maxWidth="60"
                   style="-fx-font-size:18px; -fx-alignment:center; -fx-border-color:black; -fx-border-width:0 1 0 0;"/>
            <Label text="과제명"    minWidth="300" prefWidth="300" maxWidth="300"
                   style="-fx-font-size:18px; -fx-alignment:center; -fx-border-color:black; -fx-border-width:0 1 0 0;"/>
            <Label text="현황"      minWidth="120" prefWidth="120" maxWidth="120"
                   style="-fx-font-size:18px; -fx-alignment:center; -fx-border-color:black; -fx-border-width:0 1 0 0;"/>
            <Label text="마감일"    minWidth="200" prefWidth="200" maxWidth="200"
                   style="-fx-font-size:18px; -fx-alignment:center; -fx-border-color:black; -fx-border-width:0;"/>
        </HBox>
        <!-- 데이터 행(HBox)은 컨트롤러가 동적으로 추가 -->
    </VBox>

    <!-- ───── 페이지네이션 ───── -->
    <HBox fx:id="paginationBox" alignment="CENTER"
          layoutX="10" layoutY="550" prefHeight="40" prefWidth="680"
          spacing="8"/>
</AnchorPane>
