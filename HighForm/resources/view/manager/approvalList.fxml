                  <Label text="제목" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="0" />
                  <TextField fx:id="titleDetailField" prefHeight="33.0" prefWidth="518.0" text="7/21 ~ 7/23 예비군" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                  
                        <!-- 두 번째 행 -->
                  <Label text="분류" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="categoryField" prefHeight="33.0" prefWidth="65.0" text="연차" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                        <!-- 세 번째 행 (내용) -->
                  <Label text="내용" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                  <TextArea fx:id="contentArea" prefRowCount="3" text="안녕하세요.&#10;7/21 부터 7/23 까지 예비군 훈련으로 출석이 불가합니다.&#10;공결 처리 부탁드립니다." wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="2" />
                  <Label text="첨부파일" GridPane.rowIndex="3" />
                  <Label text="소속" GridPane.columnIndex="4" />
                  <Label text="신청인" GridPane.columnIndex="5" />
                  <TextField fx:id="affiliationField" prefHeight="33.0" prefWidth="210.0" text="시스원 2기" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                  <TextField fx:id="aplicantField" prefHeight="33.0" prefWidth="103.0" text="배지원" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                  <TextField fx:id="proofFileField" prefHeight="33.0" prefWidth="65.0" text="확인서.pdf" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="3" />
                  <Label text="시작일" GridPane.rowIndex="4" />
