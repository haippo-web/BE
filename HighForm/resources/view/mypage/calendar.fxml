<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>            <!-- 이 줄 추가 -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mypage.controller.CalendarController"
      spacing="4">

    <stylesheets>
        <!-- String 타입임을 선언했으니 이제 동작합니다 -->
        <String fx:value="@../../css/win98.css"/>
    </stylesheets>

    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>

    <HBox spacing="4">
        <Button fx:id="prevBtn" text="◀"/>
        <Label  fx:id="monthLabel"/>
        <Button fx:id="nextBtn" text="▶"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="addBtn" text="추가"/>
        <Button fx:id="editBtn" text="수정"/>
    </HBox>

    <GridPane fx:id="calendarGrid"/>
</VBox>
