                  <TableColumn fx:id="endDateColumn" prefWidth="79.0" text="종료일" />
                  <TableColumn fx:id="requestDateColumn" prefWidth="102.0" text="요청일시" />
                  <TableColumn fx:id="resultColumn" prefWidth="72.0" text="결과" />
               </columns>
            </TableView>
            
                  <!-- 하단 상세 정보 패널 -->
