<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>         
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mypage.controller.CalendarController"
      spacing="4">

    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>

    <HBox spacing="4">
        <Button fx:id="prevBtn" text="◀"/>
        <Label  fx:id="monthLabel"/>
        <Button fx:id="nextBtn" text="▶"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="addBtn" text="추가"/>
        <Button fx:id="editBtn" text="수정"/>
    </HBox>

    <GridPane fx:id="calendarGrid"/>
</VBox>
