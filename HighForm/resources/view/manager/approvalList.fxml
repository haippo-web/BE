                  <TextField fx:id="endDateField" prefHeight="33.0" prefWidth="65.0" text="2025.07.30" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                  <Label text="신청일" GridPane.columnIndex="4" GridPane.rowIndex="4" />
                  <TextField fx:id="requestDateField" prefHeight="33.0" prefWidth="65.0" text="202507.08" GridPane.columnIndex="5" GridPane.rowIndex="4" />
                  <Label text="결재자" GridPane.columnIndex="4" GridPane.rowIndex="5" />
                  <TextField fx:id="confirmField" prefHeight="33.0" prefWidth="65.0" text="황요한" GridPane.columnIndex="5" GridPane.rowIndex="5" />
               </children>
            </GridPane>
            
                  <!-- 하단 버튼들 -->
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="rejectButton" onAction="#handleRejection" mnemonicParsing="false" text="반려" />
                  <Button fx:id="approveButton" onAction="#handleApproval" mnemonicParsing="false" text="승인" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
