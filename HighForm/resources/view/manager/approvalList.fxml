                  <Button fx:id="homeButton" mnemonicParsing="false" style="-fx-background-color: transparent;" text="home" />
                  <TextField fx:id="pathField" prefHeight="33.0" prefWidth="736.0" text="C:\Manager\KOSA\결재함" />
               </children>
            </HBox>
            
            <!-- 메인 테이블 -->
            <TableView fx:id="approvalTable" prefHeight="200.0">
