<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mypage.controller.CalendarController"
      spacing="4"
      prefWidth="1000" prefHeight="750">           <!-- 창 크기와 맞춤 -->

    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>

    <!-- 헤더 -->
    <HBox spacing="4">
        <Button fx:id="prevBtn" text="◀"/>
        <Label  fx:id="monthLabel"/>
        <Button fx:id="nextBtn" text="▶"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="addBtn"  text="추가"/>
        <Button fx:id="editBtn" text="수정"/>
    </HBox>

    <!-- 달력 그리드 -->
    <GridPane fx:id="calendarGrid"
              VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">

        <!-- ① 열(7개) : 가로 100%를 14.2857%씩 분할 -->
        <columnConstraints>
            <ColumnConstraints percentWidth="14.2857"/>
            <ColumnConstraints percentWidth="14.2857"/>
            <ColumnConstraints percentWidth="14.2857"/>
            <ColumnConstraints percentWidth="14.2857"/>
            <ColumnConstraints percentWidth="14.2857"/>
            <ColumnConstraints percentWidth="14.2857"/>
            <ColumnConstraints percentWidth="14.2857"/>
        </columnConstraints>

        <!-- ② 행(6개) : 세로 100%를 16.6667%씩 분할 -->
        <rowConstraints>
            <RowConstraints percentHeight="16.6667"/>
            <RowConstraints percentHeight="16.6667"/>
            <RowConstraints percentHeight="16.6667"/>
            <RowConstraints percentHeight="16.6667"/>
            <RowConstraints percentHeight="16.6667"/>
            <RowConstraints percentHeight="16.6667"/>
        </rowConstraints>

    </GridPane>
</VBox>
